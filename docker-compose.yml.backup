version: "3.8"

services:
  backend:
    build: ./backend
    ports:
      - "8000:8000"
    volumes:
      - ./data:/app/data
      - ./backend:/app
    environment:
      - DATA_FOLDER=/app/data
    command: uvicorn main:app --host 0.0.0.0 --port 8000 --reload
    networks:
      - stock-network

  frontend:
    build: ./frontend
    ports:
      - "3000:3000"
    volumes:
      - ./frontend:/app
      - /app/node_modules
      - /app/.next
    environment:
      - NEXT_PUBLIC_API_URL=http://backend:8000
    depends_on:
      - backend
    command: npm run dev
    networks:
      - stock-network

networks:
  stock-network:
    driver: bridge
